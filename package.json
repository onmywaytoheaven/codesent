{
  "name": "codesent",
  "displayName": "CodeSent for Apigee",
  "description": "Empower your development process with cutting-edge static analysis augmented with dynamic-like code processing for Apigee API Gateway",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:codesentScanner.scanProxy"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "menus": {
      "commandPalette": [
        {
          "command": "codesentScanner.scanProxy",
          "when": "editorTextFocus",
          "group": "1_modification"
        }
      ]
    },
    "statusBar/window": [
      {
        "command": "codesentScanner.scanProxy",
        "group": "navigation",
        "when": "editorTextFocus",
        "alt": "Scan Apigee Proxy"
      }
    ],
    "commands": [
      {
        "command": "codesentScanner.scanProxy",
        "title": "Scan Apigee Proxy with CodeSent"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "CodeSent for Apigee",
      "properties": {
        "codesentScanner.apiKey": {
          "type": "string",
          "description": "API key for CodeSent SAST Scanner",
          "default": "",
          "secret": true
        },
        "codesentScanner.baseUrl": {
          "type": "string",
          "description": "Base URL for CodeSent SAST Scanner API",
          "default": "https://codesent.io/api/scan/v1"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/archiver": "latest",
    "@types/form-data": "latest",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.0"
  },
  "dependencies": {
    "archiver": "latest",
    "axios": "latest",
    "codesent": "file:",
    "form-data": "latest",
    "fs-extra": "latest"
  }
}
